@model flo.desarrollo.prueba.entidades.Fabricante.Fabricante

@{
    ViewData["Title"] = "Nuevo Fabricante";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">CRUD Fabricantee</h1>
<div class="row mb-3">
    <div class="col-12">
        <div class="float-left">
            <a asp-action="Index" class="btn btn-primary"><i class="fas fa-arrow-left"></i> Volver </a>
        </div>
    </div>
</div>


<hr />
<div class="row">
    <div class="card col-12">
        <div class="card-header">
            <h3>
                <strong> Nuevo Fabricante </strong>
            </h3>
        </div>

        <div class="card-body">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group float-right">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-city">
                             Crear Fabricante
                        </i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


